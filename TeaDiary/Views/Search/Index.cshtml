@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-md-4">
            <h1>Search</h1>
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="text" id="SearchRequest" placeholder="Your search request" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <select id="SearchType" class="form-control"></select>
                    </div>
                    <div class="col-md-6">
                        <label>
                            <input type="checkbox" id="IsStrictSearch" class=""> Strict search
                        </label>
                    </div>
                </div>
                <button class="btn btn-default" id="Search" onclick="onSearchClick()" type="button">Search</button>
            </form>
        </div>
        <div class="col-md-8">
            <div id="SearchResultsTitle">

            </div>
            <div id="SearchResults">

            </div>
        </div>
        
    </div>


@section scripts
{
    @Scripts.Render("~/bundles/Search/Index")
}